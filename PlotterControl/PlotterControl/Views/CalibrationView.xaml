<UserControl x:Class="PlotterControl.Views.CalibrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Calibration Workflow -->
            <StackPanel Grid.Column="0">
                <!-- Instructions -->
                <materialDesign:Card Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Calibration Workflow" FontWeight="Bold" FontSize="16" Margin="0,0,0,4"/>
                        <TextBlock TextWrapping="Wrap" Opacity="0.7" FontSize="12"
                                   Text="1. Home the machine first&#x0a;2. Jog to bottom-left corner of paper, set Point 1&#x0a;3. Jog to top-right corner of paper, set Point 2&#x0a;4. Save calibration"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Workflow Buttons -->
                <materialDesign:Card Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Calibrate" FontWeight="Bold" Margin="0,0,0,8"/>
                        <WrapPanel>
                            <Button Command="{Binding StartCalibrationCommand}" Content="Start Calibration" Margin="0,0,8,8"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                            <Button Command="{Binding SetPoint1Command}" Content="Set Point 1 (BL)" Margin="0,0,8,8"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            <Button Command="{Binding SetPoint2Command}" Content="Set Point 2 (TR)" Margin="0,0,8,8"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            <Button Command="{Binding SaveCalibrationCommand}" Content="Save" Margin="0,0,0,8"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                        </WrapPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Calibration Points -->
                <materialDesign:Card Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Calibration Points" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Point 1 (Origin)" FontSize="12" Opacity="0.7"/>
                                <TextBlock Text="{Binding Point1, StringFormat='({0})'}" FontSize="14" FontFamily="Consolas"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Point 2 (Extent)" FontSize="12" Opacity="0.7"/>
                                <TextBlock Text="{Binding Point2, StringFormat='({0})'}" FontSize="14" FontFamily="Consolas"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="{Binding CalibrationWidth, StringFormat='Width: {0:F1} mm'}" FontSize="14" FontFamily="Consolas" Margin="0,0,24,0"/>
                            <TextBlock Text="{Binding CalibrationHeight, StringFormat='Height: {0:F1} mm'}" FontSize="14" FontFamily="Consolas"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Status -->
                <materialDesign:Card Padding="16">
                    <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" FontStyle="Italic" Opacity="0.7"/>
                </materialDesign:Card>
            </StackPanel>

            <!-- Right Column: Controls -->
            <StackPanel Grid.Column="2">
                <!-- Position Display -->
                <materialDesign:Card Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Position" FontWeight="Bold" Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AxisXArrow" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding CurrentX, StringFormat='X: {0:F2} mm'}" Margin="0,0,20,0" FontSize="16" FontFamily="Consolas"/>
                            <materialDesign:PackIcon Kind="AxisYArrow" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding CurrentY, StringFormat='Y: {0:F2} mm'}" Margin="0,0,20,0" FontSize="16" FontFamily="Consolas"/>
                            <materialDesign:PackIcon Kind="AxisZArrow" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding CurrentZ, StringFormat='Z: {0:F2} mm'}" FontSize="16" FontFamily="Consolas"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Jog Controls -->
                <materialDesign:Card Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Jog Controls" FontWeight="Bold" Margin="0,0,0,6"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Row="0" Grid.Column="1" Command="{Binding JogYPlusCommand}" Margin="2" Height="40"
                                    Style="{StaticResource MaterialDesignRaisedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ArrowUp"/>
                                    <TextBlock Text=" Y+" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Row="1" Grid.Column="0" Command="{Binding JogXMinusCommand}" Margin="2" Height="40"
                                    Style="{StaticResource MaterialDesignRaisedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ArrowLeft"/>
                                    <TextBlock Text=" X-" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Row="1" Grid.Column="1" Command="{Binding HomeAllCommand}" Margin="2" Height="40"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" ToolTip="Home All (G28)">
                                <materialDesign:PackIcon Kind="Home"/>
                            </Button>
                            <Button Grid.Row="1" Grid.Column="2" Command="{Binding JogXPlusCommand}" Margin="2" Height="40"
                                    Style="{StaticResource MaterialDesignRaisedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="X+ " VerticalAlignment="Center"/>
                                    <materialDesign:PackIcon Kind="ArrowRight"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Row="2" Grid.Column="1" Command="{Binding JogYMinusCommand}" Margin="2" Height="40"
                                    Style="{StaticResource MaterialDesignRaisedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ArrowDown"/>
                                    <TextBlock Text=" Y-" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <StackPanel Grid.Row="0" Grid.Column="3" Grid.RowSpan="3" Margin="10,0,0,0">
                                <Button Command="{Binding JogZPlusCommand}" Margin="2" Height="40" Width="60"
                                        Style="{StaticResource MaterialDesignRaisedButton}" Content="Z+"/>
                                <Button Command="{Binding JogZMinusCommand}" Margin="2" Height="40" Width="60"
                                        Style="{StaticResource MaterialDesignRaisedButton}" Content="Z-"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Step Size & Pen -->
                <materialDesign:Card Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Step Size &amp; Pen" FontWeight="Bold" Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Step:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox ItemsSource="{Binding JogSteps}" SelectedItem="{Binding JogStep}" Width="80" Margin="0,0,8,0"
                                      Style="{StaticResource MaterialDesignFilledComboBox}"/>
                            <TextBox Text="{Binding CustomJogStepText, UpdateSourceTrigger=PropertyChanged}" Width="60" Margin="0,0,4,0"
                                     Style="{StaticResource MaterialDesignFilledTextBox}"
                                     materialDesign:HintAssist.Hint="Custom"/>
                            <TextBlock Text="mm" VerticalAlignment="Center" Margin="0,0,12,0" Opacity="0.6"/>
                            <Button Command="{Binding PenUpCommand}" Content="Pen Up" Margin="0,0,5,0"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            <Button Command="{Binding PenDownCommand}" Content="Pen Down"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Pen Height Calibration -->
                <materialDesign:Card Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Pen Height Calibration" FontWeight="Bold" Margin="0,0,0,6"/>
                        <TextBlock TextWrapping="Wrap" Opacity="0.7" FontSize="12" Margin="0,0,0,8"
                                   Text="Jog Z until pen touches paper, then click 'Set Pen Down Position'."/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="{Binding DisplayPenDownZ, StringFormat='Down: {0:F2} mm'}" FontSize="14" FontFamily="Consolas" Margin="0,0,24,0"/>
                            <TextBlock Text="{Binding DisplayPenUpZ, StringFormat='Up: {0:F2} mm'}" FontSize="14" FontFamily="Consolas"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Command="{Binding SetPenDownPositionCommand}" Content="Set Pen Down Position" Margin="0,0,8,0"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                            <Button Command="{Binding TestLineCommand}" Content="Test Line"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    ToolTip="Draw a 20mm test line at current pressure to preview pen contact"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Quick Navigation -->
                <materialDesign:Card Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Quick Navigation" FontWeight="Bold" Margin="0,0,0,6"/>
                        <TextBlock Text="Move pen to calibrated area corners (pen up)." Opacity="0.7" FontSize="12" Margin="0,0,0,8"/>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Grid.Column="0" Command="{Binding GoToTopLeftCommand}"
                                    Content="TL" Margin="2" Height="40"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    ToolTip="Move to top-left corner"/>
                            <Button Grid.Row="0" Grid.Column="2" Command="{Binding GoToTopRightCommand}"
                                    Content="TR" Margin="2" Height="40"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    ToolTip="Move to top-right corner"/>

                            <Button Grid.Row="1" Grid.Column="1" Command="{Binding GoToCenterCommand}"
                                    Content="Center" Margin="2" Height="40"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    ToolTip="Move to center of calibrated area"/>

                            <Button Grid.Row="2" Grid.Column="0" Command="{Binding GoToBottomLeftCommand}"
                                    Content="BL" Margin="2" Height="40"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    ToolTip="Move to bottom-left corner (origin)"/>
                            <Button Grid.Row="2" Grid.Column="2" Command="{Binding GoToBottomRightCommand}"
                                    Content="BR" Margin="2" Height="40"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    ToolTip="Move to bottom-right corner"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Button Command="{Binding GoToOriginCommand}" Content="Go to 0,0" Margin="0,0,8,0"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="Move to machine origin (0,0)"/>
                            <Button Command="{Binding TracePerimeterCommand}" Content="Trace Perimeter"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    ToolTip="Draw a rectangle around the calibrated area to verify alignment"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
