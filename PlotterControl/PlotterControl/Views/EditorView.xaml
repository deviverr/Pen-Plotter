<UserControl x:Class="PlotterControl.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:PlotterControl.Controls">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Input Panel -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Mode Toggle + Format Selector -->
            <StackPanel Grid.Row="0" Margin="0,0,0,8">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <RadioButton Content="Text" IsChecked="{Binding IsTextMode}" GroupName="EditorMode"
                                 Style="{StaticResource MaterialDesignTabRadioButton}" Margin="0,0,4,0"/>
                    <RadioButton Content="Image" IsChecked="{Binding IsImageMode}" GroupName="EditorMode"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Format:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding AvailableFormats}"
                              SelectedItem="{Binding SelectedFormat}"
                              DisplayMemberPath="Name"
                              Width="200"
                              Style="{StaticResource MaterialDesignFilledComboBox}"/>
                </StackPanel>
            </StackPanel>

            <!-- Text Mode Controls -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8"
                        Visibility="{Binding IsTextMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Font:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox ItemsSource="{Binding AvailableFonts}" SelectedItem="{Binding SelectedFont}"
                          DisplayMemberPath="Name" Width="150" Margin="0,0,8,0"
                          Style="{StaticResource MaterialDesignFilledComboBox}"/>
                <TextBlock Text="Size:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}" Width="50" Margin="0,0,8,0"
                         Style="{StaticResource MaterialDesignFilledTextBox}"/>
                <Button Command="{Binding RenderTextCommand}" Content="Render" Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>

            <!-- Image Mode Controls -->
            <StackPanel Grid.Row="2" Margin="0,0,0,8"
                        Visibility="{Binding IsImageMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <Button Command="{Binding LoadImageCommand}" Content="Load Image" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding ImageFileName}" VerticalAlignment="Center" FontSize="12" Opacity="0.7"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Threshold:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Slider Value="{Binding ImageThreshold}" Minimum="1" Maximum="254" Width="120" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ImageThreshold, StringFormat='{}{0:F0}'}" VerticalAlignment="Center" Width="30"/>
                    <TextBlock Text="Spacing:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <TextBox Text="{Binding ImageLineSpacing, UpdateSourceTrigger=PropertyChanged}" Width="40" Margin="0,0,8,0"/>
                    <CheckBox Content="Dither" IsChecked="{Binding UseDithering}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <CheckBox Content="Contour" IsChecked="{Binding UseContourMode}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Button Command="{Binding ProcessImageCommand}" Content="Process" Style="{StaticResource MaterialDesignRaisedButton}"/>
                </StackPanel>
            </StackPanel>

            <!-- Text Input (text mode) -->
            <TextBox Grid.Row="3" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     FontSize="14" Margin="0,0,0,8"
                     Visibility="{Binding IsTextMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Type text to plot..."/>

            <!-- Image Preview (image mode) -->
            <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,8"
                    Visibility="{Binding IsImageMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Image Source="{Binding ImagePreview}" Stretch="Uniform"/>
            </Border>

            <!-- Human Writing Settings (collapsible) -->
            <Expander Grid.Row="4" Header="Human Writing" Margin="0,0,0,6" IsExpanded="False">
                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0" Padding="0,6,0,0">
                    <StackPanel>
                        <!-- Enable toggle -->
                        <CheckBox Content="Enable humanization" IsChecked="{Binding HumanSettings.Enabled}" Margin="0,0,0,6"/>

                        <!-- Jitter -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="36"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Jitter (mm):" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Value="{Binding HumanSettings.JitterMm}" Minimum="0" Maximum="1" TickFrequency="0.05"
                                    IsSnapToTickEnabled="False" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{Binding HumanSettings.JitterMm, StringFormat='{}{0:F2}'}" VerticalAlignment="Center" FontSize="11" Margin="4,0,0,0"/>
                        </Grid>

                        <!-- Baseline wobble -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="36"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Baseline (mm):" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Value="{Binding HumanSettings.BaselineWobbleMm}" Minimum="0" Maximum="1.5" TickFrequency="0.05"
                                    IsSnapToTickEnabled="False" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{Binding HumanSettings.BaselineWobbleMm, StringFormat='{}{0:F2}'}" VerticalAlignment="Center" FontSize="11" Margin="4,0,0,0"/>
                        </Grid>

                        <!-- Pen pressure -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="36"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Pressure (mm):" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Value="{Binding HumanSettings.PenPressureVariationMm}" Minimum="0" Maximum="1" TickFrequency="0.05"
                                    IsSnapToTickEnabled="False" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{Binding HumanSettings.PenPressureVariationMm, StringFormat='{}{0:F2}'}" VerticalAlignment="Center" FontSize="11" Margin="4,0,0,0"/>
                        </Grid>

                        <!-- Corner slowdown -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="36"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Corner speed:" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Value="{Binding HumanSettings.CornerSlowdown}" Minimum="0.2" Maximum="1.0" TickFrequency="0.05"
                                    IsSnapToTickEnabled="False" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{Binding HumanSettings.CornerSlowdown, StringFormat='{}{0:F2}'}" VerticalAlignment="Center" FontSize="11" Margin="4,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Expander>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,8">
                <Button Command="{Binding GenerateGCodeCommand}" Content="Generate G-Code" Margin="0,0,5,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
                <Button Command="{Binding PlotGCodeCommand}" Content="Plot" Margin="0,0,5,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="{Binding PlotButtonDisabledReason}"/>
                <Button Command="{Binding PausePlotCommand}" Content="Pause" Margin="0,0,5,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
                <Button Command="{Binding ResumePlotCommand}" Content="Resume" Margin="0,0,5,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
                <Button Command="{Binding StopPlotCommand}" Content="Stop"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
            </StackPanel>

            <!-- Estimated Plot Info (shown after G-code generation) -->
            <TextBlock Grid.Row="6" Text="{Binding EstimatedPlotInfo}" FontSize="11" FontFamily="Consolas"
                       Opacity="0.7" Margin="0,0,0,2"/>

            <!-- Plot Progress (shown during plotting) -->
            <StackPanel Grid.Row="6" Margin="0,16,0,0"
                        Visibility="{Binding IsPlotting, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Value="{Binding PlotProgress.PercentComplete, FallbackValue=0}" Minimum="0" Maximum="100" Height="8" Margin="0,0,0,4"/>
                <TextBlock FontSize="11" FontFamily="Consolas" Text="{Binding PlotProgressDisplay, FallbackValue=''}"/>
            </StackPanel>
        </Grid>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

        <!-- Right: Preview + G-Code -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Plot Preview Canvas -->
            <materialDesign:Card Grid.Row="0" Padding="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Preview" FontWeight="Bold" Margin="4,0,0,4"/>
                    <controls:PlotPreviewCanvas Grid.Row="1"
                        DrawingPaths="{Binding RenderedPaths}"
                        BedWidth="{Binding DrawableArea.Width}"
                        BedHeight="{Binding DrawableArea.Height}"
                        MachineWidth="{Binding MachineWidth}"
                        MachineHeight="{Binding MachineHeight}"
                        PaperOriginX="{Binding PaperOriginX}"
                        PaperOriginY="{Binding PaperOriginY}"
                        ShowGrid="True"
                        ClipToBounds="True"/>
                </Grid>
            </materialDesign:Card>

            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- G-Code Output -->
            <materialDesign:Card Grid.Row="2" Padding="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="G-Code" FontWeight="Bold" Margin="4,0,0,4"/>
                    <TextBox Grid.Row="1" Text="{Binding GeneratedGCode, Mode=OneWay}" IsReadOnly="True"
                             AcceptsReturn="True" TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas" FontSize="11"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
